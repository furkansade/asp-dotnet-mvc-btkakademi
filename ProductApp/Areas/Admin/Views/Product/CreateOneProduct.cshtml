@model Product

<form method="post"
      asp-area="Admin"
      asp-controller="Product"
      asp-action="CreateOneProduct" novalidate>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="from-group">
        <label for="CategoryId">Kategori</label>

        <select 
            asp-for="CategoryId"
            asp-items="@ViewBag.Categories"
            class="form-control">
        </select>

    </div>

    <div class="form-group my-3">
        <label for="ProductName">Ürün İsmi</label>
        <input type="text" id="ProductName" asp-for="ProductName" class="form-control" aria-describedby="ProductHelp" placeholder="Ürünün!">
        <small id="ProductHelp" class="form-text text-muted">Ürün ismi bizim için önemli!</small>
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group my-3">
        <label for="Price">Fiyat</label>
        <input type="text" id="Price" asp-for="Price" class="form-control" aria-describedby="PriceHelp" placeholder="Fiyatı!">
        <small id="PriceHelp" class="form-text text-muted">Fiyat alıcı için önemli!</small>
        <span class="text-danger" asp-validation-for="Price"></span>

    </div>

    <div class="form-group my-3">
        <label for="Description">Detaylar</label>
        <input type="text" id="Description" asp-for="Description" class="form-control" placeholder="Detaylar">
    </div>

    <div class="form-group my-3">
        <label for="ImageUrl">Ürün Resmi</label>
        <input type="text" id="ImageUrl" asp-for="ImageUrl" class="form-control" placeholder="Resim URL'si">
    </div>

    <button class="btn btn-primary"
            type="submit">
        Ürünü Oluştur!
    </button>
</form>