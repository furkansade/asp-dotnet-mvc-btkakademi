@model ProductForUpdateDto

<div class="d-flex justify-content-end">
    <a asp-action="Index" class="btn btn-outline-primary">Product List</a>
</div>

<form method="post"
      asp-action="UpdateOneProduct"
      asp-controller="Product">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group my-3">
        <select class="form-control"
                asp-for="CategoryId"
                asp-items="@ViewBag.Categories"></select>
    </div>

    <div class="form-group">
        <input type="text"
               asp-for="ProductName"
               id="ProductName"
               placeholder="Ürünün!"
               class="form-control" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group">
        <input type="text"
               asp-for="Price"
               id="Price"
               placeholder="Fiyatı!"
               class="form-control" />
    </div>

    <div class="form-group">
        <input type="text"
               asp-for="Description"
               id="Description"
               placeholder="Detaylar!"
               class="form-control" />
    </div>

    <div class="form-group">
        <input type="text"
               asp-for="ImageUrl"
               id="ImageUrl"
               placeholder="Resim URL'si"
               class="form-control" />
    </div>

    <button type="submit"
            class="btn-outline-primary btn my-3">
        Güncelle!
    </button>
</form>