@model Product

<div class="text-center">
    <h1>@Model.ProductName</h1>
    <span class="bg-dark
                badge
                text-white 
                m-3
                p-3">
        @Model.Price.ToString("c")
    </span>

    <div>
        <a 
            class="btn btn-outline-dark"
            asp-controller="Product"
            asp-action="Index"
            >Ürün Listen!</a>
    </div>
   

</div>
